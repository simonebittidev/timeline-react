{
  "compilerOptions": {
    "declaration": true,
    "target": "es6",
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "dom",
      "esnext"
    ],
    "types": ["node"],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "dist/esm",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
    "jsx": "react",
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.css"
  ]
}
